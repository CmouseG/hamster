$action-sheet-avatar-padding   ?= .6rem 1.2rem
$action-sheet-hover-background ?= #d0d0d0

.action-sheet-gallery
  > div
    padding $action-sheet-avatar-padding
    transition all .3s
    &:hover
      background $action-sheet-hover-background
  i, img
    font-size 2rem
    margin-bottom 5px
  .avatar
    width 50px
    height 50px

.modal-actions-enter, .modal-actions-leave-active
  opacity 0
  .modal-content
    transform translateY(101%)
