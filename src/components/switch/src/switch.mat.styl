.switch
  display flex
  align-items center
  position relative
  
  .switch-label
    margin-left 10px
    display inline-block
      &:empty
        margin-left 0
  .switch-core
    position relative
    width 52px
    height 32px
    border 1px solid #d9d9d9
    border-radius 16px
    box-sizing border-box
    background #d9d9d9
  .switch-input
    appearance none
    outline 0
    width 52px
    height 32px
    position absolute
    z-index 1
.switch-input:checked+.switch-core
  border-color #26a2ff
  background-color #26a2ff
.switch-input:checked+.switch-core:before
  transform scale(0)

.switch-core:before
  width: 50px
  height: 30px
  background-color #fdfdfd

.switch-core:after, .switch-core:before
  content: " "
  top: 0
  left: 0
  position: absolute
  transition transform .3s
  border-radius 15px
.switch-input:checked+.switch-core:after
  transform translateX(20px)
.switch-core:after
  width 30px
  height 30px
  background-color #fff
  box-shadow 0 1px 3px rgba(0,0,0,.4)
.switch-core:after, .switch-core:before
  content: " "
  top 0
  left 0
  position absolute
  transition transform .3s
  border-radius 15px
